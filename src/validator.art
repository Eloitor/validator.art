export module [
    ;---------------------------
    ; Private variables
    ;---------------------------

    plugins: #[]

    ;---------------------------
    ; Initialization
    ;---------------------------

    init: method [][
        loop list ./"plugins" 'plugin [
            name: extract.filename plugin
            \plugins\[name]: # plugin
        ]
    ]

    ;---------------------------
    ; Public methods
    ;---------------------------

    valid?: method.public [strs :string :block][
        ;; description: « check if given string is valid
        ;; options: [
        ;;      email: « verify e-mail address
        ;;      url: « verify URL
        ;; ]
        ;; returns: :logical
        ;; example: {
        ;;      valid?.url "https://arturo-lang.io"
        ;;      ; => true
        ;;
        ;;      valid?.email "loremIpsum@
        ;;      ; => false
        ;;
        ;;      valid?.email ["my@email.com", "info@google.com"]
        ;;      ; => true
        ;; }
        
        inputs: (string? strs)? -> @[strs][
            ensure -> is? [:string] strs
            strs
        ]
        loop \plugins [name, plugin][
            if attr name [
                loop inputs 'str [
                    unless do [ plugin\action str ] ->
                        return false
                ]
            ]
        ]
        return true
    ]
]!